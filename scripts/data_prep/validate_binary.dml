# Validate ImageNet data format
print("Validating ImageNet data...");

# Read subset training data (smaller for testing)
print("Loading training subset...");
X_train = read("imagenet_data/systemds_ready/train_data_subset.csv", format="csv");
Y_train = read("imagenet_data/systemds_ready/train_labels_subset.csv", format="csv");

# Read validation data
print("Loading validation data...");
X_val = read("imagenet_data/systemds_ready/val_data.csv", format="csv");
Y_val = read("imagenet_data/systemds_ready/val_labels.csv", format="csv");

print("Dataset info:");
print("- Training samples: " + nrow(X_train));
print("- Training features: " + ncol(X_train));
print("- Validation samples: " + nrow(X_val));
print("- Classes: " + ncol(Y_train));

# Validate data ranges
print("Data validation:");
print("- X_train range: [" + min(X_train) + ", " + max(X_train) + "]");
print("- Y_train sum per row: " + mean(rowSums(Y_train)));

print("Data validation completed!");